/* paging/editwork/editwork.wxss */
.box{
  margin:20rpx;
  border: 1px solid #dadada
}

.spaceAroundCenter {
  display: flex;
  flex-flow: row wrap;
  align-items: center;
  justify-content: space-between;
  line-height: 65rpx;
  font-size: 16pt;
}

.spaceAroundCenter .inputdate{
  height: 70rpx;
  width: 100%;
  text-align: center;
  align-items: center;
  border:1px solid rgb(40, 133, 4)
}

.spaceAroundCenter .inputsearch{
  width: 95%;
  height: 70rpx;
  text-align: left;
  align-items: center;
  border-bottom:1px solid rgb(40, 133, 4)
}

.spaceAroundCenter .searchview{
  width: 90%;
  display: flex;
  flex-flow: row wrap;
  font-size: 13pt;
}

.spaceAroundCenter .searchview .addbtn{
  width:66%;
  background: #0ab133;
  color: whitesmoke;
}

.spaceAroundCenter picker{
  display: flex;
  flex-flow: row wrap;
  /* text-align: center; */
  justify-content: flex-start;
  /* padding-left: 10rpx; */
  border-bottom: 1rpx solid rgb(40, 133, 4);
  margin-left: 8%;
  width: 90%;
  color: gray;
  font-size: 10pt;

}

.spaceAroundCenter image{
  width: 30rpx;
  height: 30rpx;
  margin-left: -50rpx;
  margin-top: 10rpx;
}

.spaceAroundCenter icon{
  margin-left: -70rpx;
  margin-top: 20rpx;
  z-index: -1
}

.table{
  border:1px solid #098305;
  margin-top: 25rpx;
  width: 98%;
  margin-left: 1%;
}

.tr{
  text-align: left;
  width:100%;
  display: flex;
  justify-content: space-between;
}

.th,.td{
  padding: 5px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  
}

.th0,.td0{
  border-bottom: 1px solid #dadada;
  font-size: 23rpx;
  width: 3%;
  padding: 5rpx;
  color: #0ab133;
}
.th0{
  background-color: #0ab133;
}


.th1,.td1{
  width: 20%;
}

.th2,.td2{
  width: 30%;
}

.th3,.td3{
  width: 20%;

}

.th4,.td4{
  width: 30%;

}

.td3 text{
  font-size: 11pt;
  color: #15aef5;
  text-decoration:underline;
}

.td3 .delbtn{
  line-height: 180%;
  width: 80%;
  height: 55rpx;
  color: whitesmoke;
  background: red;
  font-size: 9pt;
}

.td3 .resbtn{
  line-height: 180%;
  width: 80%;
  height: 55rpx;
  color: whitesmoke;
  background: #15aef5;
  font-size: 9pt;
}

.th{
  font-weight: 800;
  background-color: #0ab133;
  font-size: 28rpx;
  color: whitesmoke;
  padding: 5px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: left;
}
.td{
  font-size: 22rpx;
  color: black;
  padding: 5px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: left;
}

.detail{
  background: #dadada;
  width: 100%;
  font-size: 9pt;
  text-align: left;
  justify-content: flex-start;
  word-break: normal; 
}

.tr button{
  margin: 20rpx;
  width: 210rpx;
  height: 86rpx;
}

.tr .btnfont_has{
  background: #0ab133;
  color: whitesmoke;
}

.tr .btnfont_no{
  background: gainsboro;
  color: white;
}

.trtext{
  font-size: 10pt;
  color: grey;
  margin-top: 40rpx;
}

.tr textarea{
  margin-top: 10rpx;
  font-size: 10pt;
  max-height: 200rpx;
  width: 100%;
  border: 1px solid #0ab133;
  margin-bottom: 10rpx;
}

.tr .returnbtn{
  background: #ebb608;
  font-size: 9pt;
  width: 18%;
  color: whitesmoke;
  height: 65rpx;
}

.tr .savebtn{
  background: #0850eb;
  font-size: 9pt;
  width: 18%;
  color: whitesmoke;
  height: 65rpx;
}

.tr .postbtn{
  background: #0dee20;
  font-size: 9pt;
  width: 35%;
  color: whitesmoke;
  height: 65rpx;
}

.tr .addbtn{
  background: #e74c4c;
  font-size: 9pt;
  width: 27%;
  color: whitesmoke;
  height: 65rpx;
}

/* 添加进度 */
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1001;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
}
.form {
  max-height: 85%;
  width: 100%;
  display: flex;
  top: 0rpx;
  position: fixed;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  z-index: 1002;
  

} 

.form .tabledetail{
  background: white;
  display: flex;
  flex-flow: row wrap;
  width: 90%;
  padding:20rpx;
  overflow-y:scroll; 
  z-index: 1003;
}

.form .tabledetail .title{
  font-size: 17pt;
  font-weight: 700;
  margin-bottom: 20px;
}

.tr .tdd1{
  width: 35%;
  color: gray;
  font-size: 12pt;
}

.tr .tdd2gray{
  width: 65%;
  color: gray;
  font-size: 12pt;
}

.tr .tdd2{
  width: 65%;
  font-size: 12pt;
}

.tr .returncls{
  font-size: 11pt;
  line-height: 200%;
  color: #15aef5;
  width:20%;
  height:70rpx;
}

.tr .addcls{
  font-size: 11pt;
  line-height: 200%;
  background: #15aef5;
  color: whitesmoke;
  width: 20%;
  height:65rpx;
}

/* 快捷短语输入样式 */
.select_box{
  margin-top: 5rpx;
  margin-left: 5%;
  width:90%;
  height:70%;
  border-radius: 5rpx;
  position: relative;
  border-bottom: 1px solid #0ab133;
}
.select_box .select{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  padding:10rpx;
}

.select_box .select .select_text{
  font-size: 27rpx;
  color: #777777;
  line-height: 28rpx;
  flex: 1;
}

.select_box .select .select_img{
  width: 30rpx;
  height: 30rpx;
  display: block;
}

.checkBox{
  max-height: 570rpx;
  overflow-y: scroll;
  border: 1px solid #0ab133;
  width: 100%;
}

.radio-group{
  border: 1px solid #0ab133;
}